<% if user_signed_in?%>

<!-- <h1>Friends</h1> -->

<% content_for :title do %>
   <h1> Friends </h1> &ndash; <%= DateTime.now %>
    <% end %>

<table class="table table-striped table-hover table-bordered table-responstable">
   <thead class="thead-dark">   
   <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td>
          <%= link_to friend.first_name + ' ' + friend.last_name, friend, class:"btn btn-light" %>
          </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
       </td>
       
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm"%></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Friend', new_friend_path, class:"btn btn-secondary" %>
<% else %>


					
<p> Copyright &copy; Dlamp, 2021 </p>
			
<<% end %>


